<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CounterApp.CounterPage">
	<ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
            <Label Text="{Binding Path=[CounterValue], StringFormat=' value: {0}'}" HorizontalOptions="Center" TextColor="Blue"     />
            <Button Text="Increment" Command="{Binding Path=[IncrementCommand]}" TextColor="Blue"     />
            <Label Text="{Binding Path=[CounterValue2], StringFormat=' value: {0}'}" HorizontalOptions="Center" TextColor="Red"     />
            <Button Text="Decrement" Command="{Binding Path=[DecrementCommand]}" />
            <Button Text="Reset"  IsVisible="{Binding Path=[ResetVisible]}" Command="{Binding Path=[ResetCommand]}" />
            <Slider Maximum="10" Minimum="1" Value="{Binding Path=[StepValue]}" />
            <Label Text="{Binding Path=[StepValue], StringFormat='Step size: {0}'}" HorizontalOptions="Center" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
